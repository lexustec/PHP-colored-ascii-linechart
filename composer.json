{
  "name": "noximo/php-colored-ascii-linechart",
  "description": "Pretty line graphs in your console, html or images",
  "keywords": [
    "chart",
    "graph",
    "linechart",
    "linegraph",
    "ascii",
    "marker",
    "stock"
  ],
  "type": "library",
  "authors": [
    {
      "name": "Tomas Pospisil",
      "email": "pospisilt@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "noximo\\PHPColoredAsciiLinechart\\": "src/"
    }
  },
  "require": {
    "php": ">= 7.1",
    "ext-json": ">=1.3.7"
  },
  "license": "MIT",
  "require-dev": {
    "grifart/phpstan-oneline": "^0.2.0",
    "jakub-onderka/php-console-highlighter": "^0.4",
    "jakub-onderka/php-parallel-lint": "1.0.*",
    "noximo/phpstan-fileoutput": "0.1.*",
    "phpstan/phpstan": "^0.10.5",
    "phpstan/phpstan-deprecation-rules": "^0.10.2",
    "phpstan/phpstan-nette": "^0.10.1",
    "phpstan/phpstan-strict-rules": "^0.10.1",
    "roave/security-advisories": "dev-master",
    "symplify/easy-coding-standard": "^5.3"
  },
  "scripts": {
    "check-cs": "ecs check src",
    "fix-cs": "ecs check src --fix",
    "lint": "parallel-lint --colors --exclude vendor .",
    "phpstan": "phpstan analyze src --level max -c phpstan.neon --error-format=fileoutput",
    "test": [
      "@lint",
      "@check-cs",
      "@phpstan"
    ]
  }
}
